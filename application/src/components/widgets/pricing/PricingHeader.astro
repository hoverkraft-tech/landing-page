---
const { title, subtitle } = Astro.props as {
  title?: string;
  subtitle?: string;
};
---

<div class="flex flex-col items-center justify-start gap-1">
  {title && <h3 class="text-center text-xl font-semibold uppercase leading-6 tracking-wider">{title}</h3>}
  {subtitle && <p class="font-light leading-5 sm:text-lg text-muted">{subtitle}</p>}
</div>
