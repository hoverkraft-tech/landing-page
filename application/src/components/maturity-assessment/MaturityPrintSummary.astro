---
import type { MaturityAssessmentAxis } from '~/data/maturity-assessment';
import type { MaturityAssessmentStrings } from './types';

export interface Props {
  axes: MaturityAssessmentAxis[];
  strings: Pick<MaturityAssessmentStrings, 'printAnswersTitle'>;
}

const { axes, strings } = Astro.props;
---

<div class="mt-6 border-t border-gray-200/60 pt-6 hidden" data-print-summary>
  <div class="text-left">
    <div class="text-xs font-semibold tracking-widest text-muted uppercase">{strings.printAnswersTitle}</div>
    <div class="mt-3 space-y-4">
      {
        axes.map((axis) => (
          <section>
            <h4 class="text-sm font-semibold text-heading">{axis.label}</h4>
            <ul class="mt-2 space-y-1">
              {axis.questions.map((question) => (
                <li class="flex items-start justify-between gap-3">
                  <span class="min-w-0 text-sm text-default/90">{question.text}</span>
                  <span
                    class="shrink-0 text-sm font-semibold text-heading"
                    data-print-answer
                    data-question-id={question.id}
                  >
                    â€”
                  </span>
                </li>
              ))}
            </ul>
          </section>
        ))
      }
    </div>
  </div>
</div>
