---
import '@fontsource-variable/inter';
import '@fontsource/roboto-mono';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    --aw-font-serif: 'Inter Variable', ui-serif, Georgia, Cambria, serif;
    --aw-font-heading: 'Inter Variable', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    --aw-font-mono:
      'Roboto Mono', ui-monospace, SFMono-Regular, 'Cascadia Code', 'Source Code Pro', Menlo, Monaco, Consolas,
      monospace;

    /* Hoverkraft Brand Colors */
    --aw-color-primary: rgb(29 32 38); /* #1d2026 */
    --aw-color-secondary: rgb(25 152 255); /* #1998ff */
    --aw-color-accent: rgb(255 90 2); /* #ff5a02 */
    --aw-color-info: rgb(0 179 255); /* #00b3ff */
    --aw-color-warning: rgb(255 230 113); /* #ffe671 */
    --aw-color-danger: rgb(255 105 109); /* #ff696d */
    --aw-color-success: rgb(0 214 99); /* #00d663 */

    --aw-color-text-heading: rgb(29 32 38); /* Primary color for headings */
    --aw-color-text-default: rgb(80 102 144); /* Light gray for body text */
    --aw-color-text-muted: rgb(80 102 144 / 70%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(0 0 0);

    ::selection {
      background-color: rgb(25 152 255 / 20%); /* Secondary color with opacity */
      color: rgb(29 32 38);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    --aw-font-serif: 'Inter Variable', ui-serif, Georgia, Cambria, serif;
    --aw-font-heading: 'Inter Variable', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    --aw-font-mono:
      'Roboto Mono', ui-monospace, SFMono-Regular, 'Cascadia Code', 'Source Code Pro', Menlo, Monaco, Consolas,
      monospace;

    /* Hoverkraft Brand Colors - Dark Mode */
    --aw-color-primary: rgb(25 152 255); /* Secondary becomes primary in dark */
    --aw-color-secondary: rgb(255 90 2); /* Accent becomes secondary in dark */
    --aw-color-accent: rgb(0 214 99); /* Success becomes accent in dark */
    --aw-color-info: rgb(0 179 255); /* #00b3ff */
    --aw-color-warning: rgb(255 230 113); /* #ffe671 */
    --aw-color-danger: rgb(255 105 109); /* #ff696d */
    --aw-color-success: rgb(0 214 99); /* #00d663 */

    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 70%);
    --aw-color-bg-page: rgb(29 32 38); /* Primary color as dark background */

    ::selection {
      background-color: rgb(25 152 255 / 30%); /* Secondary color with opacity */
      color: rgb(255 255 255);
    }
  }

  /* Modern UI Enhancements */
  body {
    background: linear-gradient(180deg, rgba(25, 152, 255, 0.03) 0%, rgba(255, 255, 255, 1) 100%);
  }

  .dark body {
    background: linear-gradient(180deg, rgba(25, 152, 255, 0.05) 0%, rgb(29 32 38) 100%);
  }

  /* Gradient text effect for headings */
  h1,
  h2 {
    background: linear-gradient(135deg, var(--aw-color-primary) 0%, var(--aw-color-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .dark h1,
  .dark h2 {
    background: linear-gradient(135deg, var(--aw-color-secondary) 0%, var(--aw-color-info) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Card enhancements with glassmorphism */
  .bg-white {
    background: rgba(255, 255, 255, 0.8) !important;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(25, 152, 255, 0.1);
  }

  .dark .bg-white {
    background: rgba(29, 32, 38, 0.8) !important;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(25, 152, 255, 0.2);
  }

  /* Enhanced shadows */
  .shadow-lg {
    box-shadow: 0 20px 60px -15px rgba(25, 152, 255, 0.3) !important;
  }

  .dark .shadow-lg {
    box-shadow: 0 20px 60px -15px rgba(25, 152, 255, 0.4) !important;
  }

  /* Accent borders */
  .border-t,
  .border-b {
    border-image: linear-gradient(90deg, transparent, var(--aw-color-secondary), transparent) 1;
  }
</style>
