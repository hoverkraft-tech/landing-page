---
import { defaultLang } from '~/i18n/ui';
import { getAsset } from '~/utils/permalinks';

interface Props {
  title: string;
  subheading: string;
  description: string;
  logosCta: string;
  guideCta: string;
  lang?: string;
}

const { title, subheading, description, logosCta, guideCta, lang: providedLang } = Astro.props as Props;
const activeLang =
  typeof providedLang === 'string' && providedLang.trim().length > 0 ? providedLang.trim() : defaultLang;
const logosHref = getAsset('/brand/downloads/hoverkraft-logos.zip');
const guideFilename =
  activeLang === defaultLang ? 'hoverkraft-brand-guidelines.pdf' : `hoverkraft-brand-guidelines-${activeLang}.pdf`;
const guideHref = getAsset(`/brand/downloads/${guideFilename}`);
---

<div class="mb-16" data-pdf-hide="download-center">
  <h2 class="text-3xl md:text-4xl font-bold mb-8 text-gray-900 dark:text-white">{title}</h2>
  <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-8 border border-blue-200 dark:border-blue-800">
    <h3 class="text-xl font-bold mb-4 text-blue-900 dark:text-blue-100">{subheading}</h3>
    <p class="text-gray-700 dark:text-gray-300 mb-6">{description}</p>
    <div class="grid md:grid-cols-2 gap-4">
      <a
        href={logosHref}
        download
        class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
        </svg>
        {logosCta}
      </a>
      <a
        href={guideHref}
        download
        class="inline-flex items-center justify-center px-6 py-3 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-900 dark:text-white rounded-lg font-medium transition-colors"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
          ></path>
        </svg>
        {guideCta}
      </a>
    </div>
  </div>
</div>
