---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import BrandGuidelinesChecklist from './BrandGuidelinesChecklist.astro';
import type { BrandLocale, LogoCollection } from '~/data/brand/tokens';

interface Props {
  lang: BrandLocale;
  logos: LogoCollection;
  title: string;
  formatsLabel: string;
  doLabel: string;
  dontLabel: string;
}

const { lang, logos, title, formatsLabel, doLabel, dontLabel } = Astro.props as Props;
const logoItems = logos.items ?? [];
const logoDo = logos.do?.[lang] ?? [];
const logoDont = logos.dont?.[lang] ?? [];
const downloadLinkLabelByLocale: Record<BrandLocale, string> = {
  en: 'Download',
  fr: 'Télécharger',
};
const downloadLinkLabel = downloadLinkLabelByLocale[lang] ?? downloadLinkLabelByLocale.en;

const logoAssetModules = import.meta.glob<ImageMetadata>('~/assets/images/brand/**/*.{png,svg,webp}', {
  eager: true,
  import: 'default',
});

const logoAssetMap = new Map<string, ImageMetadata>();

for (const [fullPath, metadata] of Object.entries(logoAssetModules)) {
  const normalizedPath = fullPath.split('/assets/images/brand/')[1];

  if (normalizedPath && metadata) {
    logoAssetMap.set(normalizedPath, metadata);
  }
}

const normalizeAssetPath = (rawPath: string) => rawPath.replace(/^\.\//, '').replace(/^\//, '');

const resolvedLogos = logoItems.map((logo) => {
  const localizedName = logo.name?.[lang] ?? logo.name?.fr ?? logo.name?.en ?? 'Logo asset';
  const localizedUsage = logo.usage?.[lang] ?? logo.usage?.fr ?? logo.usage?.en ?? '';
  const formatEntries = Object.entries(logo.formats ?? {});

  if (!formatEntries.length) {
    throw new Error(`Logo "${localizedName}" must define at least one format.`);
  }

  const [primaryFormat, primaryPathRaw] = formatEntries[0] ?? [];

  if (typeof primaryPathRaw !== 'string' || primaryPathRaw.length === 0) {
    throw new Error(
      `Logo "${localizedName}" primary format "${primaryFormat ?? 'unknown'}" is missing a valid asset path.`
    );
  }

  const normalizedPrimaryPath = normalizeAssetPath(primaryPathRaw);
  const assetMetadata = logoAssetMap.get(normalizedPrimaryPath);

  if (!assetMetadata) {
    throw new Error(`Logo "${localizedName}" asset file "${primaryPathRaw}" was not found under assets/images/brand.`);
  }

  const downloads = formatEntries.map(([format, path]) => {
    if (typeof path !== 'string' || path.length === 0) {
      throw new Error(`Logo "${localizedName}" format "${format}" is missing a valid asset path.`);
    }

    const normalizedPath = normalizeAssetPath(path);
    const uppercaseFormat = format.toUpperCase();

    return {
      format,
      href: `/${normalizedPath}`,
      text: `${downloadLinkLabel} ${uppercaseFormat}`.trim(),
      ariaLabel: `${downloadLinkLabel} ${localizedName} (${uppercaseFormat})`,
      formatLabel: uppercaseFormat,
    };
  });

  return {
    ...logo,
    primaryFormat,
    asset: assetMetadata,
    localizedName,
    localizedUsage,
    downloads,
  };
});
---

<div class="mb-16">
  <h2 class="text-3xl md:text-4xl font-bold mb-8 text-gray-900 dark:text-white">{title}</h2>

  <div class="grid md:grid-cols-2 gap-8 mb-12">
    {
      resolvedLogos.map((logo) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg p-8 border border-gray-200 dark:border-gray-700">
          <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-8 mb-6 flex items-center justify-center min-h-[200px]">
            <Image src={logo.asset} alt={logo.localizedName} class="max-w-[200px] h-auto" loading="eager" />
          </div>
          <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">{logo.localizedName}</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">{logo.localizedUsage}</p>
          <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
            <p>
              <strong>{formatsLabel}</strong>
            </p>
            {logo.downloads?.length ? (
              <ul class="space-y-1">
                {logo.downloads.map((download) => (
                  <li>
                    <a
                      href={download.href}
                      download
                      aria-label={download.ariaLabel}
                      title={download.ariaLabel}
                      class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
                    >
                      {download.text}
                    </a>
                  </li>
                ))}
              </ul>
            ) : null}
          </div>
        </div>
      ))
    }
  </div>

  <div class="grid md:grid-cols-2 gap-8">
    <BrandGuidelinesChecklist title={doLabel} items={logoDo} tone="positive" />
    <BrandGuidelinesChecklist title={dontLabel} items={logoDont} tone="negative" />
  </div>
</div>
