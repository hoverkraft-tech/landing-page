---
import ContactEmailLink from '~/components/common/ContactEmailLink.astro';

interface Props {
  title: string;
  trademark: string;
  contactPrefix: string;
  contactSuffix?: string;
  lastUpdated: string;
}

const { title, trademark, contactPrefix, contactSuffix, lastUpdated } = Astro.props as Props;
---

<div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-8 pdf-break-avoid">
  <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">{title}</h2>
  <div class="space-y-4 text-gray-600 dark:text-gray-400">
    <p>{trademark}</p>
    <p>
      {contactPrefix}
      {' '}
      <ContactEmailLink class="text-blue-600 dark:text-blue-400 hover:underline" />
      {contactSuffix && <Fragment> {contactSuffix}</Fragment>}
    </p>
    <p class="text-sm">{lastUpdated}</p>
  </div>
</div>
