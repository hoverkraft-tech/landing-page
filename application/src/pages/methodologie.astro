---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Méthodologie — HoverKraft',
  description:
    'Notre méthode combine DORA, SPACE et Lean pour piloter votre transformation plateforme : diagnostic, design, intégration et run mesurable.',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Méthodologie HoverKraft"
    actions={[
      { variant: 'primary', text: 'Réserver un diagnostic', href: '/contact#form' },
      { text: 'Voir nos offres', href: '/offres' },
    ]}
    image={{
      src: '~/assets/images/programming-4.webp',
      alt: 'Processus HoverKraft orienté connecteurs',
    }}
  >
    <Fragment slot="title">La plateforme orientée connecteurs qui prouve par les métriques</Fragment>

    <Fragment slot="subtitle">
      Notre méthode combine DORA, SPACE et Lean pour piloter votre transformation plateforme. Chaque étape est
      documentée, outillée et mesurée pour créer une chaîne de delivery prévisible et souveraine.
    </Fragment>
  </Hero>

  <Note
    title="Le principe"
    description="Nous ne vendons pas un outil supplémentaire, mais une méthode qui aligne vos équipes, vos process et vos systèmes autour d’une même vision delivery."
  />

  <Content
    isReversed
    title="Trois briques indissociables"
    items={[
      {
        title: 'Manifeste HoverKraft',
        description:
          'Un cadre stratégique qui définit l’état futur de votre plateforme et les principes de gouvernance associés.',
      },
      {
        title: 'Formations & bootcamps',
        description: 'Des parcours immersifs pour embarquer développeurs, ops et produit sur les pratiques HoverKraft.',
      },
      {
        title: 'Certification',
        description: 'Une validation des acquis qui garantit la pérennité de la méthode au-delà de notre intervention.',
      },
    ]}
    image={{
      src: '~/assets/images/application-configuration-management.png',
      alt: 'Accompagnement méthodologique HoverKraft',
    }}
  />

  <Content
    title="La glue open source HoverKraft"
    subtitle="Des connecteurs laptop to prod pour orchestrer vos outils existants."
    items={[
      {
        title: 'Flux GitOps standardisés',
        description: 'Templates de pipelines, promotion entre environnements et rollbacks automatisés.',
      },
      {
        title: 'Observabilité unifiée',
        description: 'Dashboards DORA/SPACE, traces distribuées et alerting contextualisé.',
      },
      {
        title: 'Sécurité & IAM',
        description: 'Gestion des secrets, RBAC, audit trail et conformité intégrés à vos process.',
      },
      {
        title: 'Portail développeur',
        description:
          'Playbooks Backstage / Portainer pour accélérer l’onboarding et rendre visibles les bonnes pratiques.',
      },
    ]}
    image={{
      src: '~/assets/images/optimized-out-of-the-box.webp',
      alt: 'Connecteurs open source HoverKraft',
    }}
  />

  <Steps
    title="Le parcours HoverKraft"
    items={[
      {
        title: '1. Alignement',
        description: 'Cadrage stratégique avec les sponsors et définition des objectifs DORA/SPACE.',
        icon: 'tabler:compass',
      },
      {
        title: '2. Diagnostic terrain',
        description: 'Interviews, audits techniques et cartographie des connecteurs existants.',
        icon: 'tabler:clipboard-text',
      },
      {
        title: '3. Design cible',
        description: 'Definition du blueprint plateforme et sélection des quick wins.',
        icon: 'tabler:layout-board',
      },
      {
        title: '4. Intégration de la glue',
        description: 'Déploiement des connecteurs HoverKraft avec vos équipes en pairing.',
        icon: 'tabler:puzzle',
      },
      {
        title: '5. Mesure continue',
        description: 'Mise en place des dashboards, rituels et revues DORA/SPACE.',
        icon: 'tabler:chart-dots',
      },
      {
        title: '6. Transfert & autonomie',
        description: 'Certification, documentation complète et passage de relais sécurisé.',
        icon: 'tabler:users',
      },
    ]}
  />

  <Features2
    title="Les livrables clés"
    subtitle="Chaque étape laisse des artefacts concrets."
    columns={3}
    items={[
      {
        title: 'Playbooks HoverKraft',
        description: 'Guides opérationnels par profil (Dev, Ops, Produit, Sécurité).',
        icon: 'tabler:notebook',
      },
      {
        title: 'Blueprint plateforme',
        description: 'Architecture cible, catalogue de services et diagrammes d’intégration.',
        icon: 'tabler:layers-linked',
      },
      {
        title: 'Dashboard DORA/SPACE',
        description: 'Suivi temps réel des métriques, accessible à toute l’équipe.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Kits de formation',
        description: 'Supports pédagogiques, exercices et évaluations pour certifier vos équipes.',
        icon: 'tabler:school',
      },
      {
        title: 'Runbooks incidents',
        description: 'Procédures prêtes à l’emploi pour sécuriser votre MTTR.',
        icon: 'tabler:alert-triangle',
      },
      {
        title: 'Portail OpenKraft',
        description: 'Accès à la communauté, aux connecteurs et aux retours d’expérience partagés.',
        icon: 'tabler:brand-github',
      },
    ]}
  />

  <Stats
    title="Résultats observés"
    subtitle="La méthode HoverKraft délivre un impact mesurable."
    stats={[
      { title: 'Temps de mise en prod', amount: '-76%' },
      { title: 'Déploiements / semaine', amount: '×3' },
      { title: 'Incident post-release', amount: '-58%' },
      { title: 'Satisfaction équipe', amount: '+1,7 pts' },
    ]}
  />

  <CallToAction
    actions={[
      { variant: 'primary', text: 'Réserver un diagnostic', href: '/contact#form' },
      { text: 'Voir nos offres', href: '/offres' },
    ]}
  >
    <Fragment slot="title">Prêt à déployer la méthode HoverKraft ?</Fragment>
    <Fragment slot="subtitle"
      >Parlons de vos irritants actuels et dessinons un plan d’action adapté à votre contexte.</Fragment
    >
  </CallToAction>
</Layout>
