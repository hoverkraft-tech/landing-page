---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact ventes et support',
};
---

<Layout metadata={metadata}>
  <!-- Widget HeroText ******************* -->

  <HeroText tagline="Contact" title="Contactez notre équipe" />

  <ContactUs
    id="form"
    title="Demandez une démo ou contactez les ventes"
    subtitle="Parlez-nous de vos besoins et nous vous proposerons l'offre et les étapes suivantes."
    inputs={[
      { type: 'text', name: 'name', label: 'Nom complet' },
      { type: 'email', name: 'email', label: 'Email professionnel' },
      { type: 'text', name: 'company', label: 'Entreprise' },
    ]}
    textarea={{ label: 'Message / besoins' }}
    disclaimer={{ label: 'Nous ne partagerons jamais vos données. Consultez notre politique de confidentialité.' }}
    description="Notre équipe répond sous un jour ouvré. Pour une demande urgente, utilisez l’un des canaux ci-dessous."
    button="Envoyer"
  />

  <!-- Widget Features2 ************** -->

  <Features2
    title="Nous sommes là pour vous aider"
    items={[
      {
        title: 'Support général',
        description: `Contactez-nous pour des questions sur la gestion de compte, la facturation, l'accès aux services ou toute autre demande générale.`,
      },
      {
        title: 'Ventes',
        description:
          'Discutez avec notre équipe commerciale pour choisir l’offre adaptée, comprendre la tarification ou planifier un lancement sur mesure.',
      },
      {
        title: 'Support technique',
        description:
          "Contactez le support pour des problèmes d'intégration, d'installation ou toute panne technique liée à la plateforme.",
      },
      {
        title: 'Téléphone',
        description: '+33 (0)1 23 45 67 89',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contact@hoverkraft.cloud',
        icon: 'tabler:mail',
      },
      {
        title: 'Adresse',
        description: '10 rue (à compléter), 75000 Paris, France',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
