---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import BookingLink from '~/components/widgets/BookingLink.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { SITE } from 'astrowind:config';

const metadata = {
  title: 'Contact ventes et support',
};

const contactEmail = SITE?.contactEmail ?? '';
const bookingUrl = SITE?.bookingUrl ?? '';
---

<Layout metadata={metadata}>
  <!-- Widget HeroText ******************* -->

  <HeroText tagline="Contact" title="Contactez notre équipe" />

  <BookingLink
    id="booking"
    title="Réservez un rendez-vous avec notre équipe"
    subtitle="Choisissez un créneau qui vous convient pour échanger avec nous sur vos besoins."
    bookingUrl={bookingUrl}
    description="Notre équipe est disponible pour discuter de vos projets et répondre à vos questions. Pour une demande urgente, utilisez l'un des canaux ci-dessous."
  />

  <!-- Widget Features2 ************** -->

  <Features2
    title="Nous sommes là pour vous aider"
    items={[
      {
        title: 'Support général',
        description: `Contactez-nous pour des questions sur la gestion de compte, la facturation, l'accès aux services ou toute autre demande générale.`,
      },
      {
        title: 'Ventes',
        description:
          'Discutez avec notre équipe commerciale pour choisir l’offre adaptée, comprendre la tarification ou planifier un lancement sur mesure.',
      },
      {
        title: 'Support technique',
        description:
          "Contactez le support pour des problèmes d'intégration, d'installation ou toute panne technique liée à la plateforme.",
      },
      {
        title: 'Téléphone',
        description: '+33 (0)1 23 45 67 89',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: contactEmail,
        icon: 'tabler:mail',
      },
      {
        title: 'Adresse',
        description: 'Marseille, Aix-en-Provence, France',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
