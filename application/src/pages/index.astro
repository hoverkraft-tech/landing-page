---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Hoverkraft — Platform Engineering orienté connecteurs',
  description:
    'Hoverkraft unifie méthodologie, connecteurs open source et accompagnement expert pour libérer vos développeurs et accélérer votre time-to-market.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Platform Engineering souverain"
    actions={[
      { variant: 'primary', text: 'Planifier un diagnostic', href: '/contact#form' },
      { text: 'Explorer la méthodologie', href: '/methodologie' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Illustration de la plateforme Hoverkraft' }}
  >
    <Fragment slot="title">
      La plateforme orientée connecteurs
      <br />
      <span class="text-accent">qui libère vos développeurs</span>
    </Fragment>

    <Fragment slot="subtitle">
      Combinez la méthode HoverKraft, ses connecteurs open source et l'accompagnement des Kraft Builders pour
      transformer une dette technique chronique en chaîne de valeur continue, pilotée par les métriques DORA, SPACE et
      Lean.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note
    title="Notre mission"
    description="Faire passer les PME/ETI françaises de la dette technique à l'excellence opérationnelle grâce à une plateforme unifiée, mesurable et souveraine."
  />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="La promesse HoverKraft"
    title="Les briques qui cimentent vos équipes"
    subtitle="Une vision orientée connecteurs qui marie process, outillage et accompagnement pour un delivery sans bricolage."
    items={[
      {
        title: 'Méthode HoverKraft',
        description:
          'Une méthodologie branded, assumée et documentée du laptop à la prod pour aligner tech et produit.',
        icon: 'tabler:manual-gearbox',
      },
      {
        title: 'Glue open source',
        description: 'Des connecteurs intelligents qui unifient vos outils hétérogènes sans lock-in propriétaire.',
        icon: 'tabler:puzzle',
      },
      {
        title: 'Pilotage DORA + SPACE + Lean',
        description: 'Une lecture croisée performance & bien-être pour arbitrer sur des preuves, pas des intuitions.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Accompagnement Kraft Builders',
        description:
          'Des Platform Engineers seniors qui cadrent, forment et construisent avec vos équipes, pas à leur place.',
        icon: 'tabler:users',
      },
      {
        title: 'Libération du développeur',
        description: 'Chaque profil retrouve son métier : moins de scripts jetlag, plus de delivery focus produit.',
        icon: 'tabler:layout-board',
      },
      {
        title: 'Souveraineté et réversibilité',
        description:
          'Un socle souverain, portable et documenté. Vous gardez la main, nous faisons décoller la plateforme.',
        icon: 'tabler:shield-star',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="3 piliers"
    title="Méthodologie, accompagnement, ressources"
    items={[
      {
        title: 'Méthode HoverKraft',
        description: 'Manifeste, formations et certification pour aligner pratiques, outillage et culture produit.',
      },
      {
        title: 'Kraft Builders',
        description:
          'Audit, autonomie, restart ou PEaaS : un accompagnement expert qui s’intègre à votre organisation.',
      },
      {
        title: 'OpenKraft',
        description: 'Connecteurs open source, dashboards DORA et templates d’IDP pour prouver par le code.',
      },
    ]}
    image={{
      src: '~/assets/images/demo-presentation.png',
      alt: 'Pilier HoverKraft',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight text-heading sm:text-3xl mb-2">
        Un cadre commun de la stratégie à l'opérationnel
      </h3>
      Nous articulons les trois piliers HoverKraft pour sécuriser votre trajectoire : vision, exécution et preuve par l'open
      source.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Comment nous faisons décoller votre plateforme"
    items={[
      {
        title: 'Étape 1 : <span class="font-medium">Diagnostic HoverKraft</span>',
        description:
          '2 jours d’analyse DORA/SPACE, interviews terrain et cartographie des connecteurs pour objectiver les irritants.',
        icon: 'tabler:search',
      },
      {
        title: 'Étape 2 : <span class="font-medium">Plan d’action</span>',
        description:
          'Priorisation sur 6 mois : quick wins, chantiers structurants et trajectoire de maturité adaptée à votre contexte.',
        icon: 'tabler:timeline',
      },
      {
        title: 'Étape 3 : <span class="font-medium">Intégration de la Glue</span>',
        description:
          'Déploiement des connecteurs open source, automatisation Laptop to Prod et mise en place des dashboards.',
        icon: 'tabler:puzzle',
      },
      {
        title: 'Étape 4 : <span class="font-medium">Transfert & accélération</span>',
        description: 'Coaching in situ, rituels DORA et accompagnement continu via Kraft Builders ou PEaaS.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: '~/assets/images/programming-4.webp',
      alt: 'Illustration du parcours HoverKraft',
    }}
  />

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Connecteurs Laptop to Prod',
        description: 'CI/CD, secrets, observabilité et IAM orchestrés pour éliminer les scripts orphelins.',
      },
      {
        title: 'Workflows standardisés',
        description: 'Des pipelines reproductibles pour chaque équipe et produit, du MVP au scale-up.',
      },
      {
        title: 'Observabilité partagée',
        description: 'Dashboards DORA/SPACE et alerting contextualisé pour arbitrer collectivement.',
      },
      {
        title: 'Réversibilité garantie',
        description: 'Code source ouvert, documentation et transfert de compétences pour garder la main.',
      },
    ]}
    image={{
      src: '~/assets/images/platform-glue.png',
      alt: 'Connecteurs Hoverkraft',
    }}
  >
    <Fragment slot="content">Un socle technique cohérent qui rend visible chaque étape du flow développeur.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Libération du développeur',
        description:
          'Réduisez les temps morts et les tâches ingrates pour refocusser vos talents sur la création de valeur.',
      },
      {
        title: 'Coaching in situ',
        description: 'Formations et pairings ciblés pour ancrer les nouvelles pratiques dans vos rituels.',
      },
      {
        title: 'Time-to-market accéléré',
        description: 'Des cycles maîtrisés et un passage à l’échelle sans friction grâce aux métriques DORA.',
      },
      {
        title: 'Communauté OpenKraft',
        description: `Partage de retours d'expérience, contributions GitHub et webinars mensuels pour rester à jour.`,
      },
    ]}
    image={{
      src: '~/assets/images/programming-3.webp',
      alt: 'Équipe libérée',
    }}
  >
    <Fragment slot="content">Une expérience développeur qui attire, retient et aligne.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Features2
    title="Pour qui concevons-nous HoverKraft ?"
    subtitle="Une réponse directe aux irritants des équipes tech françaises"
    columns={3}
    items={[
      {
        title: 'Développeur interne frustré',
        description:
          'Retirez les scripts bricolés, standardisez les workflows et gagnez du temps pour livrer de la valeur.',
        icon: 'tabler:keyboard',
      },
      {
        title: 'CTO / DSI débordé',
        description:
          'Une plateforme mesurable qui réduit la charge mentale, fiabilise les déploiements et rend les arbitrages clairs.',
        icon: 'tabler:server-cog',
      },
      {
        title: 'Lead DevOps / Platform',
        description:
          'Une base crédible, documentée et extensible pour arrêter de réinventer la roue et gagner en posture.',
        icon: 'tabler:tool',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Nos derniers contenus"
    information={`Retours d'expérience, analyses DORA et ressources open source pour faire progresser votre plateforme. Abonnez-vous pour ne rien manquer.`}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Questions fréquentes"
    subtitle="Quelques réponses directes aux interrogations que l'on nous pose en mission."
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Pourquoi parler de “connecteurs” ?',
        description:
          'Parce qu’un mur de briques sans ciment ne tient pas. Les connecteurs HoverKraft orchestrent vos outils existants pour créer une chaîne de delivery cohérente et mesurable.',
      },
      {
        title: 'Combien de temps pour voir les premiers résultats ?',
        description:
          'Suite au diagnostic, nous activons un plan 6 mois avec quick wins dès les 4 premières semaines : automatisation des déploiements critiques et pilotage par métriques.',
      },
      {
        title: 'Sommes-nous dépendants de HoverKraft après la mission ?',
        description:
          'Non. Notre code est open source, la documentation livrée et vos équipes formées. Vous pouvez continuer en autonomie ou prolonger l’accompagnement si besoin.',
      },
      {
        title: 'Peut-on garder notre stack actuelle ?',
        description:
          'Nous ne remplaçons pas vos outils préférés : nous les connectons. Notre glue intègre GitLab, GitHub, Backstage, Dagger, AWS, OVHcloud, etc.',
      },
      {
        title: 'Comment se matérialisent les preuves d’impact ?',
        description:
          'Nous fournissons un dashboard avant/après sur les métriques DORA/SPACE, un ROI chiffré (time-to-market, incidents, coûts infra) et des témoignages vidéo de vos équipes.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    title="Impacts mesurés chez nos clients"
    stats={[
      { title: 'Fréquence de déploiement', amount: '×3' },
      { title: 'Lead time moyen', amount: '-76%' },
      { title: 'MTTR', amount: '-81%' },
      { title: 'Satisfaction développeurs', amount: '+1,7 pts' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      { variant: 'primary', text: 'Réserver un diagnostic HoverKraft', href: '/contact#form' },
      { text: 'Découvrir nos offres', href: '/offres' },
    ]}
  >
    <Fragment slot="title">On craque le lifecycle de votre chaîne de valeur</Fragment>
    <Fragment slot="subtitle"
      >Parlons de vos irritants actuels et dessinons le plan d’action HoverKraft adapté à votre contexte.</Fragment
    >
  </CallToAction>
</Layout>
