---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import { getLangFromUrl, useTranslatedPath } from '~/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

const metadata = {
  title: 'Methodology - HoverKraft',
  description:
    'Our method combines DORA, SPACE, and Lean to drive your platform transformation: audit, design, integration, and measurable run.',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="HoverKraft Methodology"
    actions={[
      { variant: 'primary', text: 'Book an audit', href: '/en/contact#form' },
      { text: 'View our offers', href: '/en/offers' },
    ]}
    image={{
      src: '~/assets/images/pages/methodology/programming-5.webp',
      alt: 'Connector-oriented HoverKraft process',
    }}
  >
    <Fragment slot="title">The connector-oriented platform that proves through metrics</Fragment>

    <Fragment slot="subtitle">
      Our method combines DORA, SPACE, and Lean to drive your platform transformation. Each step is documented, tooled,
      and measured to create a predictable and sovereign delivery chain.
      <span class="block mt-2 text-sm">
        To get a quick baseline, try our{' '}
        <a href={translatePath('/maturity-assessment')} class="font-semibold text-primary underline underline-offset-4">
          maturity radar
        </a>
        .
      </span>
    </Fragment>
  </Hero>

  <Note
    title="The principle"
    description="We don't sell an additional tool, but a method that aligns your teams, processes, and systems around a shared delivery vision. The methodology is built on seven pillars: DevX, environments, CI/CD & IaC, Kubernetes, observability, security, and continuous improvement."
  />

  <Content
    isReversed
    title="Three inseparable building blocks"
    items={[
      {
        title: 'HoverKraft Manifesto',
        description:
          'A strategic framework that defines the future state of your platform and its associated governance principles.',
      },
      {
        title: 'Training & bootcamps',
        description: 'Immersive programs to onboard developers, ops, and product teams on HoverKraft practices.',
      },
      {
        title: 'Certification',
        description:
          'Validation of acquired skills that ensures the sustainability of the method beyond our intervention.',
      },
    ]}
    image={{
      src: '~/assets/images/pages/methodology/application-configuration-management.png',
      alt: 'HoverKraft methodological support',
    }}
  />

  <Content
    title="The HoverKraft open source glue"
    subtitle="Laptop-to-prod connectors to orchestrate your existing tools."
    items={[
      {
        title: 'Standardized GitOps flows',
        description: 'Pipeline templates, environment promotion, and automated rollbacks.',
      },
      {
        title: 'Unified observability',
        description: 'DORA/SPACE dashboards, distributed traces, and contextualized alerting.',
      },
      {
        title: 'Security & IAM',
        description: 'Policy-as-code, secret rotation, and OAuth/SAML integrations.',
      },
    ]}
    image={{
      src: '~/assets/images/pages/methodology/optimized-out-of-the-box.webp',
      alt: 'Open source HoverKraft connectors',
    }}
  />

  <Steps
    title="The HoverKraft journey"
    items={[
      {
        title: '1. Alignment',
        description: 'Strategic framing with sponsors and definition of DORA/SPACE objectives.',
        icon: 'tabler:compass',
      },
      {
        title: '2. Field audit',
        description: 'Interviews, technical audits, and mapping of existing connectors.',
        icon: 'tabler:clipboard-text',
      },
      {
        title: '3. Target design',
        description: 'Definition of the platform blueprint and selection of quick wins.',
        icon: 'tabler:layout-board',
      },
      {
        title: '4. Glue integration',
        description: 'Deployment of HoverKraft connectors with your teams in pairing.',
        icon: 'tabler:puzzle',
      },
      {
        title: '5. Continuous measurement',
        description: 'Dashboards setup, rituals, and DORA/SPACE reviews.',
        icon: 'tabler:chart-dots',
      },
      {
        title: '6. Transfer & autonomy',
        description: 'Certification, complete documentation, and secure handover.',
        icon: 'tabler:users',
      },
    ]}
  />

  <Features2
    title="Key deliverables"
    subtitle="Tangible outputs at each step."
    columns={3}
    items={[
      {
        title: 'Architectural Decision Records',
        description: 'Structured documentation of technical choices, their context, and rationale.',
        icon: 'tabler:file-text',
      },
      {
        title: 'DORA/SPACE dashboards',
        description: 'Pre-built Grafana and Looker Studio templates to track your improvements.',
        icon: 'tabler:dashboard',
      },
      {
        title: 'Connector catalog',
        description: 'A library of ready-to-use open source connectors with integration guides.',
        icon: 'tabler:puzzle',
      },
      {
        title: 'GitOps workflows',
        description: 'Reference pipelines for build, deploy, and release management.',
        icon: 'tabler:git-branch',
      },
      {
        title: 'IDP portal',
        description: 'Developer portal based on Backstage or similar, tailored to your context.',
        icon: 'tabler:app-window',
      },
      {
        title: 'Training materials',
        description: 'Documentation, videos, and exercises to make teams autonomous.',
        icon: 'tabler:school',
      },
    ]}
  />

  <Stats
    title="Measured impact"
    subtitle="Average results observed after 6 months of implementation"
    stats={[
      { title: 'Time-to-market gains', amount: '40-60%' },
      { title: 'Incidents reduced', amount: '60-80%' },
      { title: 'Team satisfaction', amount: '+40-60%' },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Schedule an audit',
        href: '/en/contact#form',
      },
      {
        text: 'Explore offers',
        href: '/en/offers',
      },
    ]}
  >
    <Fragment slot="title">Ready to transform your delivery?</Fragment>

    <Fragment slot="subtitle">
      Kraft Builders support you throughout your platform engineering journey, from strategic framing to operational
      autonomy of your teams.
    </Fragment>
  </CallToAction>
</Layout>
