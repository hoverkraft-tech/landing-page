---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BrandMissionSection from '~/components/brand/BrandMissionSection.astro';
import BrandLogosSection from '~/components/brand/BrandLogosSection.astro';
import BrandColorsSection from '~/components/brand/BrandColorsSection.astro';
import BrandTypographySection from '~/components/brand/BrandTypographySection.astro';
import BrandDownloadsSection from '~/components/brand/BrandDownloadsSection.astro';
import BrandLegalSection from '~/components/brand/BrandLegalSection.astro';
import { brandColors, typography, logos, brandMission } from '~/data/brand/tokens';

const metadata = {
  title: 'Hoverkraft Brand Guidelines',
  description:
    'Discover Hoverkraft brand guidelines: logos, colors, typography, and best practices for consistent use of our visual identity.',
};

const lang = 'en';
const copy = {
  hero: {
    tagline: 'Brand Identity',
    title: 'Hoverkraft Brand Guidelines',
    subtitle:
      'Official guidelines for consistent use of our visual identity. Download our assets and follow best practices to ensure professional and harmonious communication.',
  },
  logo: {
    title: 'Logo',
    formatsLabel: 'Formats:',
    checklist: {
      doLabel: 'Do ✓',
      dontLabel: "Don't ✗",
    },
  },
  colors: {
    title: 'Color Palette',
    checklist: {
      doLabel: 'Do ✓',
      dontLabel: "Don't ✗",
    },
  },
  typography: {
    title: 'Typography',
    weightsLabel: 'Available weights:',
    fallbackLabel: 'Fallback:',
    sampleText: 'The quick brown fox jumps',
  },
  download: {
    title: 'Download Center',
    subheading: 'Official Assets',
    description:
      'Download official Hoverkraft logos and assets in various formats. For any questions or specific requests, please contact us.',
    logosCta: 'Logo Pack (ZIP)',
    guideCta: 'Complete Guide (PDF)',
  },
  legal: {
    title: 'Legal Information and Contact',
    trademark:
      'The "Hoverkraft" name and Hoverkraft logo are registered trademarks. Any unauthorized use of our trademarks is strictly prohibited.',
    contactPrefix: 'For any questions regarding the use of our brand or to obtain custom assets, please contact us at',
    contactSuffix: undefined,
    lastUpdated: 'Last updated: November 2025',
  },
};
---

<Layout metadata={metadata}>
  <Hero tagline={copy.hero.tagline}>
    <Fragment slot="title">{copy.hero.title}</Fragment>
    <Fragment slot="subtitle">{copy.hero.subtitle}</Fragment>
  </Hero>

  <section class="px-4 py-16 sm:px-6 lg:px-8 mx-auto max-w-7xl">
    <BrandMissionSection lang={lang} mission={brandMission} />
    <BrandLogosSection
      lang={lang}
      logos={logos}
      title={copy.logo.title}
      formatsLabel={copy.logo.formatsLabel}
      doLabel={copy.logo.checklist.doLabel}
      dontLabel={copy.logo.checklist.dontLabel}
    />
    <BrandColorsSection
      lang={lang}
      brandColors={brandColors}
      title={copy.colors.title}
      doLabel={copy.colors.checklist.doLabel}
      dontLabel={copy.colors.checklist.dontLabel}
    />
    <BrandTypographySection
      lang={lang}
      typography={typography}
      title={copy.typography.title}
      weightsLabel={copy.typography.weightsLabel}
      fallbackLabel={copy.typography.fallbackLabel}
      sampleText={copy.typography.sampleText}
    />
    <BrandDownloadsSection
      title={copy.download.title}
      subheading={copy.download.subheading}
      description={copy.download.description}
      logosCta={copy.download.logosCta}
      guideCta={copy.download.guideCta}
    />
    <BrandLegalSection
      title={copy.legal.title}
      trademark={copy.legal.trademark}
      contactPrefix={copy.legal.contactPrefix}
      contactSuffix={copy.legal.contactSuffix}
      lastUpdated={copy.legal.lastUpdated}
    />
  </section>
</Layout>
