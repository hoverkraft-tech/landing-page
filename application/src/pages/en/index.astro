---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Hoverkraft — Connector-first Platform Engineering',
  description:
    'Hoverkraft unifies methodology, open-source connectors, and expert guidance to free your developers and accelerate your time-to-market.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Sovereign Platform Engineering"
    actions={[
      { variant: 'primary', text: 'Book a diagnostic', href: '/en/contact#form' },
      { text: 'Explore the methodology', href: '/en/methodology' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Hoverkraft platform illustration' }}
  >
    <Fragment slot="title">
      The connector-first platform
      <br />
      <span class="text-accent">that frees your developers</span>
    </Fragment>

    <Fragment slot="subtitle">
      Combine the HoverKraft method, its open-source connectors, and the guidance of the Kraft Builders to transform
      chronic technical debt into a continuous value chain powered by DORA, SPACE, and Lean metrics.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note
    title="Our mission"
    description="Help French SMBs and mid-market companies move from technical debt to operational excellence with a unified, measurable, and sovereign platform."
  />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="The HoverKraft promise"
    title="The building blocks that cement your teams"
    subtitle="A connector-first vision that blends process, tooling, and guidance for delivery without duct tape."
    items={[
      {
        title: 'HoverKraft Method',
        description: 'A bold, documented methodology from laptop to production that aligns tech and product teams.',
        icon: 'tabler:manual-gearbox',
      },
      {
        title: 'Open-source glue',
        description: 'Smart connectors that unify heterogeneous tools without creating proprietary lock-in.',
        icon: 'tabler:puzzle',
      },
      {
        title: 'DORA + SPACE + Lean steering',
        description: 'A combined performance and well-being view so decisions are made on evidence, not intuition.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Kraft Builders guidance',
        description: 'Senior Platform Engineers who frame, train, and build with your teams—not instead of them.',
        icon: 'tabler:users',
      },
      {
        title: 'Developer liberation',
        description: 'Every role gets back to their craft: fewer stitched scripts, more focus on product delivery.',
        icon: 'tabler:layout-board',
      },
      {
        title: 'Sovereignty and reversibility',
        description:
          'A sovereign, portable, and documented foundation. You stay in control; we help the platform take off.',
        icon: 'tabler:shield-star',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="3 pillars"
    title="Methodology, guidance, resources"
    items={[
      {
        title: 'HoverKraft Method',
        description: 'Manifesto, training, and certification to align practices, tooling, and product culture.',
      },
      {
        title: 'Kraft Builders',
        description: 'Assessment, autonomy, restart, or PEaaS: expert support embedded in your organisation.',
      },
      {
        title: 'OpenKraft',
        description: 'Open-source connectors, DORA dashboards, and IDP templates to prove value through code.',
      },
    ]}
    image={{
      src: '~/assets/images/demo-presentation.png',
      alt: 'HoverKraft pillar',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight text-heading sm:text-3xl mb-2">
        A shared framework from strategy to operations
      </h3>
      We combine HoverKraft’s three pillars to secure your trajectory: a clear vision, solid execution, and proof through
      open source.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How we launch your platform"
    items={[
      {
        title: 'Step 1: <span class="font-medium">HoverKraft diagnostic</span>',
        description:
          'Two days of DORA/SPACE analysis, field interviews, and connector mapping to objectify the friction points.',
        icon: 'tabler:search',
      },
      {
        title: 'Step 2: <span class="font-medium">Action plan</span>',
        description:
          'A six-month roadmap: quick wins, structural projects, and a maturity path suited to your context.',
        icon: 'tabler:timeline',
      },
      {
        title: 'Step 3: <span class="font-medium">Glue integration</span>',
        description: 'Deployment of open-source connectors, laptop-to-prod automation, and dashboard implementation.',
        icon: 'tabler:puzzle',
      },
      {
        title: 'Step 4: <span class="font-medium">Transfer & acceleration</span>',
        description: 'In-situ coaching, DORA rituals, and continued support via Kraft Builders or PEaaS.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: '~/assets/images/programming-4.webp',
      alt: 'HoverKraft journey illustration',
    }}
  />

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Laptop-to-prod connectors',
        description: 'CI/CD, secrets, observability, and IAM orchestrated to eliminate ad-hoc scripts.',
      },
      {
        title: 'Standardised workflows',
        description: 'Repeatable pipelines for every team and product, from MVP to scale-up.',
      },
      {
        title: 'Shared observability',
        description: 'DORA/SPACE dashboards and contextual alerts so teams can arbitrate together.',
      },
      {
        title: 'Guaranteed reversibility',
        description: 'Open source code, documentation, and knowledge transfer keep ownership in your hands.',
      },
    ]}
    image={{
      src: '~/assets/images/platform-glue.png',
      alt: 'Hoverkraft connectors',
    }}
  >
    <Fragment slot="content"
      >A coherent technical foundation that makes every step of the developer flow visible.</Fragment
    >

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Developer liberation',
        description: 'Reduce idle time and toil so your talent refocuses on creating value.',
      },
      {
        title: 'On-site coaching',
        description: 'Targeted training and pairing to embed new practices in your rituals.',
      },
      {
        title: 'Accelerated time-to-market',
        description: 'Controlled cycles and frictionless scaling thanks to DORA-backed decisions.',
      },
      {
        title: 'OpenKraft community',
        description: 'Experience sharing, GitHub contributions, and monthly webinars keep you up to date.',
      },
    ]}
    image={{
      src: '~/assets/images/programming-3.webp',
      alt: 'Empowered team',
    }}
  >
    <Fragment slot="content">A developer experience that attracts, retains, and aligns.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Who is HoverKraft designed for?"
    subtitle="A direct response to the friction points facing French engineering teams"
    columns={3}
    items={[
      {
        title: 'Frustrated in-house developer',
        description: 'Remove hacked-together scripts, standardise workflows, and reclaim time to deliver value.',
        icon: 'tabler:keyboard',
      },
      {
        title: 'Overloaded CTO / CIO',
        description: 'A measurable platform that reduces cognitive load, stabilises releases, and clarifies decisions.',
        icon: 'tabler:server-cog',
      },
      {
        title: 'Lead DevOps / Platform',
        description:
          'A credible, documented, and extensible base so you stop reinventing the wheel and gain authority.',
        icon: 'tabler:tool',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Latest insights"
    information={`Success stories, DORA analysis, and open-source resources to grow your platform. Subscribe to stay in the loop.`}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently asked questions"
    subtitle="Straight answers to the questions we hear most often on engagements."
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why do we talk about “connectors”?',
        description:
          'Because a wall of bricks without mortar collapses. HoverKraft connectors orchestrate your existing tools to create a coherent, measurable delivery chain.',
      },
      {
        title: 'How quickly will we see results?',
        description:
          'Right after the diagnostic we activate a six-month plan with quick wins in the first four weeks: automation of critical deployments and metrics-driven steering.',
      },
      {
        title: 'Will we depend on HoverKraft after the engagement?',
        description:
          'No. Our code is open source, documentation is delivered, and your teams are trained. You can continue autonomously or extend support if needed.',
      },
      {
        title: 'Can we keep our current stack?',
        description:
          'We do not replace your favourite tools—we connect them. Our glue integrates GitLab, GitHub, Backstage, Dagger, AWS, OVHcloud, and more.',
      },
      {
        title: 'How is impact evidenced?',
        description:
          'We provide before/after dashboards on DORA/SPACE metrics, quantified ROI (time-to-market, incidents, infra costs), and video testimonials from your teams.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    title="Measured outcomes with our clients"
    stats={[
      { title: 'Deployment frequency', amount: '×3' },
      { title: 'Average lead time', amount: '-76%' },
      { title: 'MTTR', amount: '-81%' },
      { title: 'Developer satisfaction', amount: '+1.7 pts' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      { variant: 'primary', text: 'Book a HoverKraft diagnostic', href: '/en/contact#form' },
      { text: 'Discover our offers', href: '/en/services' },
    ]}
  >
    <Fragment slot="title">Let’s unlock your delivery value chain</Fragment>
    <Fragment slot="subtitle">
      Share your current friction points and we will shape the HoverKraft action plan tailored to your context.
    </Fragment>
  </CallToAction>
</Layout>
