---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import BookingLink from '~/components/widgets/BookingLink.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { SITE } from 'astrowind:config';

const metadata = {
  title: 'Contact',
};

const contactEmail = SITE?.contactEmail ?? '';
const bookingUrl = SITE?.bookingUrl ?? '';
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <BookingLink
    id="booking"
    title="Schedule a meeting with our team"
    subtitle="Choose a time that works for you to discuss your needs with us."
    bookingUrl={bookingUrl}
    description="Our team is available to discuss your projects and answer your questions. For urgent requests, please use one of the channels below."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General support',
        description: `Contact us with questions about account management, billing, access to services, or any other general enquiries.`,
      },
      {
        title: 'Contact sales',
        description:
          'Discuss with our sales team to choose the right offer, understand pricing, or plan a customised launch.',
      },
      {
        title: 'Technical support',
        description:
          'Contact support for integration issues, installation problems, or any technical issues related to the platform.',
      },
      {
        title: 'Phone',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: contactEmail,
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Marseille, Aix-en-Provence, France',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
