{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Branding Data Manifest",
  "description": "Contract interface between hoverkraft-tech/branding and hoverkraft-tech/landing-page repositories",
  "type": "object",
  "required": [
    "version",
    "timestamp",
    "commit",
    "colors",
    "logos",
    "brandMission",
    "usageGuidelines"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Semantic version of the branding data (e.g., 1.0.0)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the branding data was generated",
      "format": "date-time"
    },
    "commit": {
      "type": "string",
      "description": "Git commit SHA of the branding repository",
      "pattern": "^[0-9a-f]{40}$"
    },
    "brandMission": {
      "type": "object",
      "description": "Localized brand mission statements",
      "required": ["fr", "en"],
      "additionalProperties": false,
      "properties": {
        "fr": { "$ref": "#/definitions/missionEntry" },
        "en": { "$ref": "#/definitions/missionEntry" }
      }
    },
    "usageGuidelines": {
      "type": "object",
      "description": "Localized usage guidelines for the brand",
      "required": ["fr", "en"],
      "additionalProperties": false,
      "properties": {
        "fr": { "$ref": "#/definitions/usageGuidelinesEntry" },
        "en": { "$ref": "#/definitions/usageGuidelinesEntry" }
      }
    },
    "colors": {
      "type": "array",
      "description": "Brand color definitions",
      "items": {
        "type": "object",
        "required": ["name", "hex", "rgb", "usage"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Color name",
            "example": "Primary Blue"
          },
          "hex": {
            "type": "string",
            "description": "Hexadecimal color value",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "example": "#1E3A8A"
          },
          "rgb": {
            "type": "string",
            "description": "RGB color value",
            "pattern": "^\\d+,\\s*\\d+,\\s*\\d+$",
            "example": "30, 58, 138"
          },
          "usage": {
            "type": "string",
            "description": "Usage guidelines for this color",
            "example": "Primary brand color, main CTAs, key UI elements"
          }
        }
      }
    },
    "logos": {
      "type": "array",
      "description": "Brand logo assets",
      "items": {
        "type": "object",
        "required": ["name", "path", "formats", "copy"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Descriptive name of the logo variant",
            "example": "Primary Logo"
          },
          "path": {
            "type": "string",
            "description": "Relative path to the logo file in the artifact",
            "example": "logo/primary.svg"
          },
          "formats": {
            "type": "array",
            "description": "Available file formats for this logo variant",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "copy": {
            "type": "object",
            "description": "Localized copy for logo usage details",
            "required": ["fr", "en"],
            "additionalProperties": false,
            "properties": {
              "fr": { "$ref": "#/definitions/logoCopy" },
              "en": { "$ref": "#/definitions/logoCopy" }
            }
          }
        }
      }
    },
    "mascot": {
      "type": "object",
      "description": "Brand mascot asset (optional)",
      "required": ["name", "path"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Descriptive name of the mascot",
          "example": "Hoverkraft Mascot"
        },
        "path": {
          "type": "string",
          "description": "Relative path to the mascot file in the artifact",
          "example": "mascot/mascot.png"
        },
        "usage": {
          "type": "string",
          "description": "Usage guidelines for the mascot",
          "example": "Use in playful communications and community content"
        }
      }
    },
    "fonts": {
      "type": "object",
      "description": "Typography information (optional)",
      "properties": {
        "primary": {
          "type": "object",
          "properties": {
            "family": {
              "type": "string",
              "example": "Inter Variable"
            },
            "weights": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "fallback": {
              "type": "string",
              "example": "system-ui, sans-serif"
            }
          }
        },
        "monospace": {
          "type": "object",
          "properties": {
            "family": {
              "type": "string",
              "example": "Roboto Mono"
            },
            "weights": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "missionEntry": {
      "type": "object",
      "required": ["title", "description"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "description": "Localized mission title"
        },
        "description": {
          "type": "string",
          "description": "Localized mission description"
        }
      }
    },
    "guidelineSet": {
      "type": "object",
      "required": ["do", "dont"],
      "additionalProperties": false,
      "properties": {
        "do": {
          "type": "array",
          "description": "List of recommended practices",
          "items": {
            "type": "string"
          }
        },
        "dont": {
          "type": "array",
          "description": "List of practices to avoid",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "usageGuidelinesEntry": {
      "type": "object",
      "required": ["overview", "logo", "colors"],
      "additionalProperties": false,
      "properties": {
        "overview": {
          "type": "string",
          "description": "Overview of brand usage guidelines"
        },
        "logo": {
          "$ref": "#/definitions/guidelineSet"
        },
        "colors": {
          "$ref": "#/definitions/guidelineSet"
        }
      }
    },
    "logoCopy": {
      "type": "object",
      "required": ["usage"],
      "additionalProperties": false,
      "properties": {
        "usage": {
          "type": "string",
          "description": "Usage guidance for the logo variant"
        },
        "minimumSize": {
          "type": "string",
          "description": "Minimum size instructions"
        },
        "clearSpace": {
          "type": "string",
          "description": "Clear space guidance around the logo"
        }
      }
    }
  }
}
