{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Branding Data Manifest",
  "description": "Contract interface between hoverkraft-tech/branding and hoverkraft-tech/landing-page repositories",
  "type": "object",
  "required": [
    "version",
    "timestamp",
    "commit",
    "colors",
    "logos",
    "brandMission"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Semantic version of the branding data (e.g., 1.0.0)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the branding data was generated",
      "format": "date-time"
    },
    "commit": {
      "type": "string",
      "description": "Git commit SHA of the branding repository",
      "pattern": "^[0-9a-f]{40}$"
    },
    "brandMission": {
      "type": "object",
      "description": "Brand mission content localized by language",
      "required": ["title", "description"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "allOf": [
            { "$ref": "#/definitions/localizedString" },
            {
              "description": "Mission title localized for each supported language",
              "properties": {
                "fr": { "example": "Construire l avenir de la logistique" },
                "en": { "example": "Building the future of logistics" }
              }
            }
          ]
        },
        "description": {
          "allOf": [
            { "$ref": "#/definitions/localizedString" },
            {
              "description": "Mission description localized for each supported language",
              "properties": {
                "fr": {
                  "example": "Nous aidons les entreprises a automatiser la logistique avec une technologie fiable et durable."
                },
                "en": {
                  "example": "We help companies automate logistics with reliable, sustainable technology."
                }
              }
            }
          ]
        }
      }
    },
    "colors": { "$ref": "#/definitions/colorCollection" },
    "logos": { "$ref": "#/definitions/logoCollection" },
    "mascot": {
      "type": "object",
      "description": "Brand mascot asset (optional)",
      "required": ["name", "path", "usage"],
      "properties": {
        "name": {
          "allOf": [
            { "$ref": "#/definitions/localizedString" },
            {
              "description": "Localized mascot name",
              "properties": {
                "fr": { "example": "Hoverkraft le robot" },
                "en": { "example": "Hoverkraft the Robot" }
              }
            }
          ]
        },
        "path": {
          "type": "string",
          "description": "Relative path to the mascot file in the artifact",
          "example": "mascot/mascot.png"
        },
        "usage": {
          "allOf": [
            { "$ref": "#/definitions/localizedString" },
            {
              "description": "Localized usage guidelines for the mascot",
              "properties": {
                "fr": {
                  "example": "Utiliser la mascotte dans les materiels marketing pour renforcer l identite de la marque."
                },
                "en": {
                  "example": "Use the mascot in marketing materials to reinforce brand identity."
                }
              }
            }
          ]
        }
      }
    },
    "typography": { "$ref": "#/definitions/typographyCollection" }
  },
  "definitions": {
    "localizedObject": {
      "type": "object",
      "required": ["fr", "en"],
      "additionalProperties": false
    },
    "localizedString": {
      "allOf": [
        { "$ref": "#/definitions/localizedObject" },
        {
          "properties": {
            "fr": { "type": "string" },
            "en": { "type": "string" }
          }
        }
      ]
    },
    "localizedStringArray": {
      "allOf": [
        { "$ref": "#/definitions/localizedObject" },
        {
          "properties": {
            "fr": {
              "type": "array",
              "items": { "type": "string" }
            },
            "en": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      ]
    },
    "colorItem": {
      "type": "object",
      "required": ["name", "hex", "rgb", "usage"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "allOf": [
            { "$ref": "#/definitions/localizedString" },
            {
              "description": "Localized color name",
              "properties": {
                "fr": { "example": "Bleu principal" },
                "en": { "example": "Primary Blue" }
              }
            }
          ]
        },
        "hex": {
          "type": "string",
          "description": "Hexadecimal color value",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "example": "#1E3A8A"
        },
        "rgb": {
          "type": "string",
          "description": "RGB color value",
          "pattern": "^\\d+,\\s*\\d+,\\s*\\d+$",
          "example": "30, 58, 138"
        },
        "usage": {
          "allOf": [
            { "$ref": "#/definitions/localizedString" },
            {
              "description": "Localized usage guidance for this color"
            }
          ]
        }
      }
    },
    "colorCollection": {
      "type": "object",
      "description": "Brand color definitions and usage guidance",
      "required": ["items"],
      "additionalProperties": false,
      "properties": {
        "do": {
          "allOf": [
            { "$ref": "#/definitions/localizedStringArray" },
            {
              "description": "Localized list of recommended color usage practices"
            }
          ]
        },
        "dont": {
          "allOf": [
            { "$ref": "#/definitions/localizedStringArray" },
            {
              "description": "Localized list of color usage practices to avoid"
            }
          ]
        },
        "items": {
          "type": "array",
          "description": "Localized color palette entries",
          "items": {
            "$ref": "#/definitions/colorItem"
          }
        }
      }
    },
    "logoItem": {
      "type": "object",
      "required": ["name", "path", "formats", "usage"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Descriptive name of the logo variant",
          "example": "Primary Logo"
        },
        "path": {
          "type": "string",
          "description": "Relative path to the logo file in the artifact",
          "example": "logo/primary.svg"
        },
        "formats": {
          "type": "array",
          "description": "Available file formats for this logo variant",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "usage": {
          "allOf": [
            { "$ref": "#/definitions/localizedString" },
            {
              "description": "Localized usage guidance for the logo variant"
            }
          ]
        }
      }
    },
    "logoCollection": {
      "type": "object",
      "description": "Brand logo assets and usage guidance",
      "required": ["items"],
      "additionalProperties": false,
      "properties": {
        "do": {
          "allOf": [
            { "$ref": "#/definitions/localizedStringArray" },
            {
              "description": "Localized list of recommended logo usage practices"
            }
          ]
        },
        "dont": {
          "allOf": [
            { "$ref": "#/definitions/localizedStringArray" },
            {
              "description": "Localized list of logo usage practices to avoid"
            }
          ]
        },
        "items": {
          "type": "array",
          "description": "Logo asset entries",
          "items": {
            "$ref": "#/definitions/logoItem"
          }
        }
      }
    },
    "typographyToken": {
      "type": "object",
      "required": ["family", "weights"],
      "additionalProperties": false,
      "properties": {
        "family": {
          "type": "string",
          "example": "Inter Variable"
        },
        "weights": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "fallback": {
          "type": "string",
          "example": "system-ui, sans-serif"
        },
        "usage": {
          "allOf": [
            { "$ref": "#/definitions/localizedString" },
            {
              "description": "Localized usage guidance for this font family"
            }
          ]
        }
      }
    },
    "typographyCollection": {
      "type": "object",
      "description": "Typography information (optional)",
      "additionalProperties": false,
      "properties": {
        "primary": { "$ref": "#/definitions/typographyToken" },
        "monospace": { "$ref": "#/definitions/typographyToken" }
      }
    }
  }
}
