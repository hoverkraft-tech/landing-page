{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Branding Data Manifest",
  "description": "Contract interface between hoverkraft-tech/branding and hoverkraft-tech/landing-page repositories",
  "type": "object",
  "required": [
    "version",
    "timestamp",
    "commit",
    "colors",
    "logos",
    "brandMission",
    "usageGuidelines"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Semantic version of the branding data (e.g., 1.0.0)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the branding data was generated",
      "format": "date-time"
    },
    "commit": {
      "type": "string",
      "description": "Git commit SHA of the branding repository",
      "pattern": "^[0-9a-f]{40}$"
    },
    "brandMission": {
      "type": "string",
      "description": "Brand mission statement",
      "example": "Empower developers and accelerate time-to-market through a connector-oriented Platform Engineering methodology"
    },
    "usageGuidelines": {
      "type": "object",
      "description": "General usage guidelines for the brand",
      "properties": {
        "overview": {
          "type": "string",
          "description": "Overview of brand usage guidelines"
        },
        "dos": {
          "type": "array",
          "description": "List of recommended practices",
          "items": {
            "type": "string"
          }
        },
        "donts": {
          "type": "array",
          "description": "List of practices to avoid",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "colors": {
      "type": "array",
      "description": "Brand color definitions",
      "items": {
        "type": "object",
        "required": ["name", "hex", "rgb", "usage"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Color name",
            "example": "Primary Blue"
          },
          "hex": {
            "type": "string",
            "description": "Hexadecimal color value",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "example": "#1E3A8A"
          },
          "rgb": {
            "type": "string",
            "description": "RGB color value",
            "pattern": "^\\d+,\\s*\\d+,\\s*\\d+$",
            "example": "30, 58, 138"
          },
          "usage": {
            "type": "string",
            "description": "Usage guidelines for this color",
            "example": "Primary brand color, main CTAs, key UI elements"
          }
        }
      }
    },
    "logos": {
      "type": "array",
      "description": "Brand logo assets",
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Descriptive name of the logo variant",
            "example": "Primary Logo"
          },
          "path": {
            "type": "string",
            "description": "Relative path to the logo file in the artifact",
            "example": "logo/primary.svg"
          },
          "usage": {
            "type": "string",
            "description": "Usage guidelines for this logo variant",
            "example": "Main logo for light backgrounds"
          }
        }
      }
    },
    "mascot": {
      "type": "object",
      "description": "Brand mascot asset (optional)",
      "required": ["name", "path"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Descriptive name of the mascot",
          "example": "Hoverkraft Mascot"
        },
        "path": {
          "type": "string",
          "description": "Relative path to the mascot file in the artifact",
          "example": "mascot/mascot.png"
        },
        "usage": {
          "type": "string",
          "description": "Usage guidelines for the mascot",
          "example": "Use in playful communications and community content"
        }
      }
    },
    "fonts": {
      "type": "object",
      "description": "Typography information (optional)",
      "properties": {
        "primary": {
          "type": "object",
          "properties": {
            "family": {
              "type": "string",
              "example": "Inter Variable"
            },
            "weights": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "fallback": {
              "type": "string",
              "example": "system-ui, sans-serif"
            }
          }
        },
        "monospace": {
          "type": "object",
          "properties": {
            "family": {
              "type": "string",
              "example": "Roboto Mono"
            },
            "weights": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  }
}
