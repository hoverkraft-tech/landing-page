---
import TestimonialSlider from "@/components/react/TestimonialSlider";
import { markdownify } from "@/lib/utils/textConverter";


export type TestimonialItem = {
  avatar?: string;
  author: string;
  organization: string;
  content: string;
  rating: number;
};

export type Testimonial = {
  title: string;
  description: string;
  testimonial_list: TestimonialItem[];
};

const { testimonial } = Astro.props;
---

<section class="reviews">
  <div class="container">
    <div class="row justify-between">
      <div class="lg:col-6 lg:mb-0 mb-4">
        <h2 set:html={markdownify(testimonial.title)}/>
      </div>
      <div class="lg:col-4">
        <p set:html={markdownify(testimonial.description)}/>
      </div>
    </div>
    <div class="row mt-2 md:mt-10">
      <div class="col-12">
        <TestimonialSlider list={testimonial.testimonial_list} client:load />
      </div>
    </div>
  </div>
</section>
